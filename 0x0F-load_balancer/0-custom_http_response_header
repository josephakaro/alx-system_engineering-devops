#!/usr/bin/env bash

# Install Nginx
sudo apt-get update
sudo apt-get install -y nginx

sudo tee /etc/nginx/sites-available/default <<EOF
server {
    listen 80;
    server_name web-01;

    location / {
        add_header X-Served-By $hostname;
        ...
    }
}

server {
    listen 80;
    server_name web-02;

    location / {
        add_header X-Served-By $hostname;
        ...
    }
}
EOF

sudo ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/

sudo service nginx restart
